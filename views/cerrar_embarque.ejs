<% include ./static/header %>
<% include ./static/sidebar %>
<% include ./static/navbar %>

<div class="col-md-6 col-lg-10-2">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <br>
            <h3 class="box-title">Cerrar Embarque #<%= embarque%></h3>
            <br>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="/guardar_equipo" method="POST" enctype="multipart/form-data">
            <div class="box-body">
                <!------->
                <!-- Date format yyyy-m-d -->
                <%
                     var d = new Date();
                     var mm = d.getMonth() + 1;
                     var dd = d.getDate();
                     var yy = d.getFullYear();
                     var myDateString = yy + '-' + mm + '-' + dd; //(US)
                     %>
                <!------->
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="Titulo">Numero de Caja: </label><label id="caja"></label> <label id="msg">
                        </label>
                        <input type="text" class="form-control" id="caja" name="caja" value="" required>
                    </div>




                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <input type="file" id="fileUploader" name="fileUploader" accept="image/*;capture=camera" required />

                    </div>
                </div>

                <div class="form-group">
                    <label for="Descripcion">Comentario:</label>
                    <textarea type="text" class="form-control " rows="3" name="comentario"></textarea>
                </div>



                <input type="text" name="embarque" value="<%=embarque%>" hidden>
                <input type="text" name="idempleado" value="<%=empleadoId%>" hidden>

                <!------->

                <div class="box-footer">
                    <button id="btnguardar" type="submit" class="btn btn-primary"
                        onclick="$('form').attr('action', '/cerrar_embarque');">Guardar</button>
                </div>
        </form>
    </div>
    <!-- /.box -->

    <% include ./static/footer %>
</div>
</body>

</html>

<script>

    $('#fecha_embarque').datepicker({
        format: "yyyy-m-d",
        orientation: "bottom",
        todayHighlight: true
    });



</script>